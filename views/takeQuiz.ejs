<%- include('partials/header') -%>
<div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-6">
        <h2 class="justify-content-center"><%=quiz.title%></h2>
        <div class="col-6">
        
            <% for(let i = 0 ; i < questions.length ; i++){%>
                <div class="col-6 justify-content-between mt-5">
                    <h3>Question<%i%> => <%=questions[i].question%>?</h3>
                    <ol>
                        <li><%=questions[i].answer1%></li>
                        <li><%=questions[i].answer2%></li>
                        <li><%=questions[i].answer3%></li>
                        <li><%=questions[i].answer4%></li>
                    </ol>
                    <div class="btn-group">
                        <input type="radio" name="question<%=i%>" data-title="1" class="btn" checked/>
                        <input type="radio" name="question<%=i%>" data-title="2" class="btn" />
                        <input type="radio" name="question<%=i%>" data-title="3" class="btn" />
                        <input type="radio" name="question<%=i%>" data-title="4" class="btn" />
                    </div>
                </div>
            <% } %>
             


        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') -%>

