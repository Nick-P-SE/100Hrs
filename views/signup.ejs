<%- include('partials/header') -%>

    <main class="container">

        
        <div class="hero min-h-screen bg-base-200 w-screen">
          <div class="hero-content flex-col lg:flex-row-reverse">
            <div class="text-center lg:text-left">
              <h1 class="text-5xl font-bold">Signup now!</h1>
              <p class="py-6"> If you already have an account, please <a class="link"href="/login">login</a> instead.</p>
            </div>
            <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
              <div class="card-body">
                <% if (locals.messages.errors) { %>
                  <% messages.errors.forEach( el => { %>
                      <div class="alert alert-danger"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
              <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el => { %>
                      <div class="alert alert-info"><%= el.msg %></div>
                  <% }) %>    
              <% } %>
                <form action="/signup" method="POST">
                  <div class="form-control">
                    <label class="label form-label" for="userName">
                      <span class="label-text">User Name</span>
                    </label>
                    <input type="text" placeholder="User Name" class="form-control input input-bordered" id="userName" name="userName"/>
                  </div>

                  <div class="form-control">
                    <label class="label form-label" for="exampleInputEmail1">
                      <span class="label-text">Email</span>
                    </label>
                    <input type="email" placeholder="Email" class="form-control input input-bordered" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
                  </div>

                  <div class="form-control">
                    <label for="password" class="label form-label">
                      <span class="label-text">Password</span>
                    </label>
                    <input type="password" class="form-control input input-bordered" id="password" name="password"/>
                  </div>

                  <div class="form-control">
                    <label for="confirmPassword" class="label form-label">
                      <span class="label-text">Confirm Password</span>
                    </label>
                    <input type="password" class="form-control input input-bordered" id="confirmPassword" name="confirmPassword"/>
                  </div>

                  <div class="form-control mt-6">
                    <button type="submit" class="btn btn-primary">Signup</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </main>

<%- include('partials/footer') -%>